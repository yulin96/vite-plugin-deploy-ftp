{
  "name": "vite-plugin-deploy-ftp",
  "version": "2.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "homepage": "https://github.com/yulin96/vite-plugin-deploy-ftp",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yulin96/vite-plugin-deploy-ftp.git"
  },
  "bugs": {
    "url": "https://github.com/yulin96/vite-plugin-deploy-ftp/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc -p tsconfig.json",
    "pack": "pnpm run build && pnpm pack",
    "build:test": "cd playground && vite build",
    "build:test:deploy": "cd playground && vite build --mode deploy"
  },
  "keywords": [
    "vite-plugin",
    "vite",
    "plugin",
    "deploy",
    "ftp",
    "upload",
    "publish"
  ],
  "author": "yulinzhao",
  "license": "MIT",
  "description": "将dist目录下的文件上传到ftp服务器",
  "devDependencies": {
    "@types/node": "^22.15.32",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "vite": "^6.0.3 || ^7"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.5.3",
    "@types/archiver": "^6.0.3",
    "archiver": "^7.0.1",
    "basic-ftp": "^5.0.5",
    "chalk": "^5.4.1",
    "dayjs": "^1.11.13",
    "ora": "^8.2.0"
  }
}
